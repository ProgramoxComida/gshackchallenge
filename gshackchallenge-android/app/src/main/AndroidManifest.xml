<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="io.programming4food.poh">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".GSHackChallenge"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true">
        <activity android:name=".ProductsActivity"
                android:theme="@style/AppThemeNoBar"></activity>
        <activity
                android:name=".OrdersActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".TrackingActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".PaymentResultActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".PaymentActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".CartActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".SubcategoryActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".LoginActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity
                android:name=".DepartmentsActivity"
                android:theme="@style/AppThemeNoBar" />
        <activity android:name=".ProductCategoriesActivity" />
        <activity
                android:name=".DashboardActivity"
                android:label="@string/title_activity_dashboard"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".SplashActivity"
                android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>