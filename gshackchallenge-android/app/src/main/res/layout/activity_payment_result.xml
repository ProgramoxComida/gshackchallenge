<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/elektraYellowDark"
        android:backgroundTintMode="multiply" tools:context=".PaymentResultActivity">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="64dp"
            android:text="Â¡Gracias por tu pedido!" android:textAlignment="center"
            android:textColor="@color/googleGreen" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp" android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:tint="@color/googleGreen"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/baseline_check_circle_outline_black_48"/>
    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_constraint"
            android:layout_height="wrap_content" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:text="Muchas gracias por comprar en Elektra. Ahora puedes dar seguimiento a tu pedido desde la app."
            android:textAlignment="center"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
    <Button
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            android:backgroundTint="@color/googleGreen" android:text="Finalizar"
            android:textColor="@android:color/white" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>