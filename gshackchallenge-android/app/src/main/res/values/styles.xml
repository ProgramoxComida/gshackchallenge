<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/elektraYellow</item>
        <item name="colorPrimaryDark">@color/elektraYellowDark</item>
        <item name="android:textColorPrimary">@color/elektraRed</item>
    </style>
    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/elektraYellow</item>
        <item name="colorPrimaryDark">@color/elektraYellowDark</item>
        <item name="android:textColorPrimary">@color/elektraRed</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/elektraRed</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/elektraYellow</item>
        <item name="colorPrimaryDark">@color/elektraYellowDark</item>
        <item name="android:textColorPrimary">@color/elektraRed</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/elektraRed</item>
    </style>

</resources>
